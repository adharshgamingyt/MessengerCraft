{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "messengercraft",
  "version": "0.0.1",
  "identifier": "com.adharsh.messengercraft",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3006",
    "beforeDevCommand": "bun dev:web",
    "beforeBuildCommand": "bun build"
  },
  "app": {
    "windows": [
      {
        "title": "Messengercraft",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
